import tkinter as tk
from tkinter import messagebox

class calculadoraraiz:
    def __init__(self):
        self.ventana = tk.Tk()
        self.ventana.title("raiz cuadrada")
        self.ventana.geometry("280x180")
        
        self.crear_interfaz()
    
    def crear_interfaz(self):
        # campo de entrada
        tk.Label(self.ventana, text="numero:").pack()
        self.entrada = tk.Entry(self.ventana, width=15)
        self.entrada.pack()
        
        # resultado
        self.etiqueta_resultado = tk.Label(self.ventana, text="")
        self.etiqueta_resultado.pack(pady=8)
        
        # botones
        marco_botones = tk.Frame(self.ventana)
        marco_botones.pack(pady=8)
        
        tk.Button(marco_botones, text="calcular raiz", 
                 command=self.calcular).pack(side=tk.LEFT, padx=6)
        tk.Button(marco_botones, text="limpiar", 
                 command=self.limpiar).pack(side=tk.LEFT, padx=6)
    
    def obtener_numero(self):
        """obtiene y valida el numero ingresado"""
        try:
            numero = float(self.entrada.get())
            return numero
        except ValueError:
            raise ValueError("debe ingresar un valor numerico")
    
    def calcular(self):
        """calcula la raiz cuadrada con manejo de errores"""
        try:
            numero = self.obtener_numero()
            
            if numero < 0:
                raise ValueError("no existe raiz de numeros negativos")
            
            resultado = numero ** 0.5
            self.etiqueta_resultado.config(text=f"raiz cuadrada: {resultado:.2f}")
            
        except ValueError as e:
            messagebox.showerror("error", str(e))
            self.etiqueta_resultado.config(text="")
    
    def limpiar(self):
        """limpia todos los campos"""
        self.entrada.delete(0, tk.END)
        self.etiqueta_resultado.config(text="")
    
    def ejecutar(self):
        """inicia la aplicacion"""
        self.ventana.mainloop()

if __name__ == "__main__":
    app = calculadoraraiz()
    app.ejecutar()
