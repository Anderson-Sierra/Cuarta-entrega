import tkinter as tk
from tkinter import messagebox

class calculadorapotencias:
    def __init__(self):
        self.ventana = tk.Tk()
        self.ventana.title("calculadora de potencias")
        self.ventana.geometry("280x200")
        
        self.crear_interfaz()
    
    def crear_interfaz(self):
        # campos de entrada
        tk.Label(self.ventana, text="base:").pack()
        self.entrada_base = tk.Entry(self.ventana, width=15)
        self.entrada_base.pack()
        
        tk.Label(self.ventana, text="exponente:").pack()
        self.entrada_exponente = tk.Entry(self.ventana, width=15)
        self.entrada_exponente.pack()
        
        # resultado
        self.etiqueta_resultado = tk.Label(self.ventana, text="")
        self.etiqueta_resultado.pack(pady=8)
        
        # botones
        marco_botones = tk.Frame(self.ventana)
        marco_botones.pack(pady=8)
        
        tk.Button(marco_botones, text="calcular", 
                 command=self.calcular).pack(side=tk.LEFT, padx=6)
        tk.Button(marco_botones, text="limpiar", 
                 command=self.limpiar).pack(side=tk.LEFT, padx=6)
    
    def obtener_numeros(self):
        """obtiene y valida los numeros ingresados"""
        try:
            base = float(self.entrada_base.get())
            exponente = float(self.entrada_exponente.get())
            return base, exponente
        except ValueError:
            raise ValueError("debe ingresar valores numericos")
    
    def calcular(self):
        """calcula la potencia con manejo de errores"""
        try:
            base, exponente = self.obtener_numeros()
            
            # manejar caso especial de 0^0
            if base == 0 and exponente == 0:
                raise ValueError("indeterminacion: 0 elevado a 0")
            
            resultado = base ** exponente
            self.etiqueta_resultado.config(text=f"resultado: {resultado:.4f}")
            
        except ValueError as e:
            messagebox.showerror("error", str(e))
            self.etiqueta_resultado.config(text="")
        except OverflowError:
            messagebox.showerror("error", "numero demasiado grande")
            self.etiqueta_resultado.config(text="")
    
    def limpiar(self):
        """limpia todos los campos"""
        self.entrada_base.delete(0, tk.END)
        self.entrada_exponente.delete(0, tk.END)
        self.etiqueta_resultado.config(text="")
    
    def ejecutar(self):
        """inicia la aplicacion"""
        self.ventana.mainloop()

if __name__ == "__main__":
    app = calculadorapotencias()
    app.ejecutar()
